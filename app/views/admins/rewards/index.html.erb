<h1>Rewards</h1>
<table id="table">
  <thead>
    <tr id="tablehead">
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.id %></td>
        <td><%= reward.title %></td>
        <td><%= reward.description %></td>
        <td><%= reward.price %> <%= reward.price.currency %></td>
        <td><%= link_to 'Edit', edit_admins_reward_path(reward) %></td>
        <td><%= link_to 'Destroy', admins_reward_path(reward), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  

</table></br>
<%= link_to 'New Reward', new_admins_reward_path %>
