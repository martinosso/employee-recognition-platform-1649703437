<div id="kudos">
<table>
<h1 id="kudotitle">Kudos</h1>
  <thead>
    <tr id="tablehead">
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <td><%= kudo.giver.email %></td>
        <td><%= kudo.receiver.email %></td>
        <td><%= link_to 'Show', kudo %></td>
        <% if current_employee and current_employee.id == kudo.giver.id or admin_signed_in? %>
          <td><%= link_to 'Edit', edit_kudo_path(kudo) %></td>
          <td><%= link_to 'Destroy', kudo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
<% if current_employee or current_admin %>
  <p id="newkudo"><%= link_to 'New Kudo', new_kudo_path %></p>
<% end %>
